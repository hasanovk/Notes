me;</div><div>$new_contact['lastName']= $lastName;</div><div>$new_contact['phone'] = ['type' =&gt; $phone_type, 'number' =&gt; $phone];</div><div>$new_contact['email'] = ['type'=&gt;$email_type, 'address' =&gt; $email];</div><div>$new_contact['address'] =[</div><div>            "type" =&gt; $address_type,</div><div>            "street" =&gt; $street,</div><div>            "city" =&gt; $street,</div><div>            "state" =&gt; $state,</div><div>            "country" =&gt; $country,</div><div>            "postalCode" =&gt; $postalCode,</div><div>            "country" =&gt; $country,</div><div>            ];</div><div><br /></div><div>// Before we add the new contact, we increase ID by 1</div><div>$file['ID'] = $file['ID'] + 1;</div><div><br /></div><div>// Append the new contact:</div><div>$file['all'][] = $new_contact;</div><div><br /></div><div>$out = "KFH_Contacts_Test.json";</div><div>$data_out = json_encode($file,JSON_PRETTY_PRINT);</div><div>file_put_contents($out, $data_out);</div><div>?&gt;</div><div><br /></div></en-note>